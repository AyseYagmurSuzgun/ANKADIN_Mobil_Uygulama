<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    android:orientation="vertical"
    android:padding="24dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="55dp"
        app:cardElevation="6dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="2dp">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Profil Fotoğrafı"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilAd"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:hint="Kişi Adı"
        app:boxStrokeColor="#7E57C2"
        app:hintTextColor="#7E57C2"
        app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
        app:startIconTint="#7E57C2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilTelefon"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="Telefon Numarası"
        app:boxStrokeColor="#7E57C2"
        app:hintTextColor="#7E57C2"
        app:startIconDrawable="@android:drawable/ic_menu_call"
        app:startIconTint="#7E57C2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTelefon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSil"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="SİL"
            android:textColor="#D32F2F"
            app:icon="@android:drawable/ic_menu_delete"
            app:iconTint="#D32F2F"
            app:strokeColor="#D32F2F" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuncelle"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#7E57C2"
            android:text="GÜNCELLE"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_save" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="#E0E0E0" />

    <TextView
        android:id="@+id/tvMesajBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Geçmiş Bildirimler"
        android:textColor="#424242"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMesajlar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        android:scrollbars="vertical"
        tools:listitem="@android:layout/simple_list_item_1" />

</LinearLayout>
